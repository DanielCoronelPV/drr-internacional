@using DRR_PRESENTATION.Models
@using Microsoft.AspNetCore.Components.Web

@inject TranslationService Translator
@inject IJSRuntime JS

<footer class="footer">  
  <div class="footer-bg-cover"></div>  
  <div class="footer-top-border"></div>  

  <div class="footer-content container">  
    <div class="grid-4-cols gap-8 mb-12">  
      <!-- Marca -->  
      <div>  
        <h3 class="footer-brand">  
          <span class="logo-cont" onclick="scrollToSection('inicio')">
                        @if (EmpresaData != null && !string.IsNullOrEmpty(EmpresaData.Logo))
                        {
                            <img id="logo" src="data:image/png;base64,@EmpresaData.Logo" alt="Logo" />
                        }
                    </span>  
        </h3>
                <p class="footer-brand-text">@((MarkupString)Translator.Translate("footerDescri"))</p>
                <div class="social-links">
                    <a href="https://www.facebook.com/DRR.Systemas/" class="social-btn"><i class="fab fa-facebook-f"></i></a>
                    <a href="https://www.instagram.com/drrsystemas/?hl=es" class="social-btn"><i class="fab fa-instagram"></i></a>
                    <a href="https://www.youtube.com/channel/UCUCsBcpFKja9bBMaLW7J3cg" class="social-btn"><i class="fab fa-youtube"></i></a>
                </div>  
      </div>  

      <!-- Enlaces rápidos -->  
      <div>
                <h4 class="footer-section-title">@((MarkupString)Translator.Translate("enlaceRapido"))</h4>
                <ul class="footer-links">  
          @foreach (var item in MenuItems)  
          {  
            <li>  
              <a href="javascript:void(0);" @onclick="() => ScrollToSection(GetSectionId(item))">
                                @((MarkupString)Translator.Translate(item))
                            </a>  
            </li>  
          }  
        </ul>  
      </div>  

      <!-- Contacto -->  
      <div>
                <h4 class="footer-section-title">@((MarkupString)Translator.Translate("contacto"))</h4>
                <div class="footer-contact">
                    <div><i class="fas fa-map-pin"></i>@((MarkupString)Translator.Translate("direccionDescri"))</div>
                    <div><i class="fas fa-phone"></i>@((MarkupString)Translator.Translate("llamanos")): +@numeroWhatsApp</div>
                    <div>  
            <i class="fas fa-envelope"></i>  
            @if (EmpresaData != null && !string.IsNullOrEmpty(EmpresaData.E_Mail))  
            {  
              <p>@EmpresaData.E_Mail</p>  
            }  
          </div>  
        </div>  
      </div>  
    </div>  

    <div class="footer-divider"></div>  

    <div class="footer-bottom">  
      <div class="footer-left">
                <span>@((MarkupString)Translator.Translate("derechosReservados"))</span>
            </div>  
      @* <div class="footer-right">  
        <a href="#">Políticas de Privacidad</a>  
      </div>   *@
    </div>  
  </div>  

  <button class="scroll-top-btn" onclick="scrollToSection('inicio')"><i class="fas fa-arrow-up"></i></button>  

  <div class="decor-dot dot-1"></div>  
  <div class="decor-dot dot-2"></div>  
</footer>  

@code {
    [Parameter]
    public Empresa? EmpresaData { get; set; }
    private string numeroWhatsApp = "";  

    protected override async Task OnAfterRenderAsync(bool firstRender)  
    {  
        if (firstRender)  
        {  
            await JS.InvokeVoidAsync("setupFab");  
        }  
    }  

    protected override void OnParametersSet()
    {
        // Este método se llama cada vez que se establece un parámetro (como EmpresaData)
        if (EmpresaData != null)
        {
            var telefono = EmpresaData.telefono ?? "";
            telefono = telefono.Replace("-", "").Replace(" ", "");
            if (telefono.StartsWith("0"))
                telefono = telefono.Substring(1);
            numeroWhatsApp = $"549{telefono}";
        }
    }

    [Inject] public IJSRuntime JSRuntime { get; set; } = default!;  

    private string[] MenuItems = { "inicio", "objetivo", "productos", "registro", "contactanos" };  

    private string GetSectionId(string label)  
    {  
        return label.ToLower().Replace(" ", "-");  
    }  

    private async Task ScrollToSection(string sectionId)  
    {  
        await JSRuntime.InvokeVoidAsync("scrollToSection", sectionId);  
    }

    protected override void OnInitialized()
    {
        Translator.OnLanguageChanged += StateHasChanged;
    }

    public void Dispose()
    {
        Translator.OnLanguageChanged -= StateHasChanged;
    }
}
